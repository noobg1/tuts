<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body class="container">

    <main>
        <div class="jumbotron">
            <p><b>Todo App :  </b>Your list....</p>
            <ul>
                <% data.forEach(function(item) { %>
                    <li><%= item.replace(/<br>/g,'') %></li>
                <% }); %>
            </ul>
        </div>

        <form action="/write" method = "post">
        <h4>Add a task<h4>
          <div class="row">
           <div class="col-lg-6">
              <div class="input-group">
                <input type="text" class="form-control" placeholder="Enter new task ..." name="data">
                <span class="input-group-btn">
                  <button class="btn btn-default" type="submit">Go!</button>
                </span>
              </div><!-- /input-group -->
            </div><!-- /.col-lg-6 -->
          </div><!-- /.row -->
        </form>
        <br>
        <br>
        
        <form action="/update" method = "post">
        <h4>Update a task<h4>
          <div class="row">
              <select name = "index" >
                <% data.forEach(function(item, index) { %>
                  <option value = "<%= index %>"> <%= index %> </option>
                <% }); %>
              </select>
          
                <div class="col-lg-6">
                  <div class="input-group">
                      <input type="text" class="form-control" placeholder="Enter new task name ..." name="newData">
                      <span class="input-group-btn">
                        <button class="btn btn-default" type="submit">Go!</button>
                      </span>
                  </div><!-- /input-group -->
                </div><!-- /.col-lg-6 -->
            </div><!-- /.row -->
        </form>

        <br>
        <br>

        <form action="/delete" method = "post">
        <h4>Delete a task<h4>
          <div class="form-group">
            <select name = "index" >
              <% data.forEach(function(item, index) { %>
                <option value = "<%= index %>"> <%= index %> </option>
              <% }); %>
            </select>
            <button type="submit" class="btn btn-default">Go! </button>
          </div>
        </form>

    </main>

    <footer>
        <% include ../partials/footer %>
    </footer>
    
</body>
</html>