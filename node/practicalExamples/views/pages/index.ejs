<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body class="container">

    <main>
        <div class="jumbotron">
            <h2>Todo App</h2>
            <p>Your list....</p>
            <ul>
                <% data.forEach(function(item) { %>
                    <li><%= item.replace(/<br>/g,'') %></li>
                <% }); %>
            </ul>
        </div>

        <form action="/write" method = "post">
          <div class="form-group">
            <label for="another task">Enter new task...</label>
            <input type="text" class="form-control" id="text" name="data">
          </div>
        </form>

        <form action="/update" method = "post">
          <div class="form-group">
            <select name = "index" >
              <% data.forEach(function(item, index) { %>
                <option value = "<%= index %>"> <%= index %> </option>
              <% }); %>
            </select>
            <label for="another task">Enter task to update...</label>
            <input type="text" class="form-control" id="text" name="newData">
            <button type="submit" class="btn btn-info">Update </button>
          </div>
        </form>

        <form action="/delete" method = "post">
          <div class="form-group">
            <select name = "index" >
              <% data.forEach(function(item, index) { %>
                <option value = "<%= index %>"> <%= index %> </option>
              <% }); %>
            </select>
            <button type="submit" class="btn btn-info">Change </button>
          </div>
        </form>

    </main>

    <footer>
        <% include ../partials/footer %>
    </footer>
    
</body>
</html>